[gd_resource type="Resource" script_class="DWSchemaLibrary" load_steps=4 format=3]

[ext_resource type="Script" path="res://addons/developerworks_sdk/schema/dw_schema_library.gd" id="1_schema"]

[sub_resource type="Resource" id="SchemaEntry_1"]
script = ExtResource("1_schema")
SchemaEntry = true
name = "simple_response"
description = "A simple response with an answer and confidence level"
json_schema = "{
  \"type\": \"object\",
  \"properties\": {
    \"answer\": {
      \"type\": \"string\",
      \"description\": \"The answer to the question\"
    },
    \"confidence\": {
      \"type\": \"number\",
      \"description\": \"Confidence level from 0.0 to 1.0\"
    }
  },
  \"required\": [\"answer\", \"confidence\"]
}"

[sub_resource type="Resource" id="SchemaEntry_2"]
script = ExtResource("1_schema")
SchemaEntry = true
name = "character_info"
description = "Information about a game character"
json_schema = "{
  \"type\": \"object\",
  \"properties\": {
    \"name\": {
      \"type\": \"string\",
      \"description\": \"Character name\"
    },
    \"class\": {
      \"type\": \"string\",
      \"description\": \"Character class (warrior, mage, rogue, etc.)\"
    },
    \"level\": {
      \"type\": \"integer\",
      \"description\": \"Character level (1-100)\"
    },
    \"stats\": {
      \"type\": \"object\",
      \"properties\": {
        \"strength\": {\"type\": \"integer\"},
        \"intelligence\": {\"type\": \"integer\"},
        \"agility\": {\"type\": \"integer\"}
      },
      \"required\": [\"strength\", \"intelligence\", \"agility\"]
    },
    \"backstory\": {
      \"type\": \"string\",
      \"description\": \"Character backstory\"
    }
  },
  \"required\": [\"name\", \"class\", \"level\", \"stats\"]
}"

[resource]
script = ExtResource("1_schema")
schemas = Array[Object]([SubResource("SchemaEntry_1"), SubResource("SchemaEntry_2")])